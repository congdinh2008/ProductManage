@model ProductManager.Core.Models.Product

<div class="col-md-3">

    <div class="card" style="width: 18rem;">
        <img src="/images/@Model.ImageUrl" class="card-img-top img-thumbnail" alt="@Model.ImageUrl">
        <div class="card-body">
            <a class="card-title" asp-area="" asp-controller="ProductCustomer" asp-action="Details" asp-route-id="@Model.Id">@Model.Name</a>
            <a href="#" class="btn btn-primary">Add To Cart</a>
        </div>
    </div>
</div>

